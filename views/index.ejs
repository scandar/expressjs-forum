<%include partials/header %>

<a href="/logout">logout</a>
<h1><a href="/index/new">add a post</a></h1>

<h2>recent posts</h2>
<% posts.forEach(function(post) { %>
    <h3><%=post.title%></h3>
    <% if(post.image){ %> <img src="<%=post.image%>" alt="<%= post.title %>"> <%}%>
    <p><%=post.content%></p>
    <a href="/index/<%=post._id%>">Read more</a>
<%});%>

<%include partials/footer %>