<%include ../partials/header %>



<div class="form">
    <h1>edit <%=post.title%></h1>
    <form action="/index/<%=post._id%>?_method=PUT" method="post">
        <div class="form-group">
            <input type="text" name="post[title]" placeholder="Title" value="<%=post.title%>" required class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="post[content]" placeholder="Post content" value="<%=post.content%>" required class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="post[image]" placeholder="image url (optional)" value="<%=post.image%>" class="form-control">
        </div>
        <input type="submit" value="Post" class="btn btn-primary btn-block">
    </form>
</div>

<%include ../partials/footer %>
