<%include ../partials/header %>



<div class="form">
    <h1>Add new post</h1>
    <form action="/index" method="post">
        <div class="form-group">
            <input type="text" name="post[title]" placeholder="Title" required class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="post[content]" placeholder="Post content" required class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="post[image]" placeholder="image url (optional)" class="form-control">
        </div>
        <input type="submit" value="Post" class="btn btn-primary btn-block">
    </form>
</div>

<%include ../partials/footer %>
