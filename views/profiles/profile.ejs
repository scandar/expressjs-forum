<%include ../partials/header %>

<%if(currentUser && String(user.id) === String(currentUser._id)) {%>
    <h2>Your posts</h2>
<%} else {%>
    <h2><%=user.username%>'s posts</h2>
<%}%>

<% user.posts.forEach(function(post) { %>
    <h3><%=post.title%></h3>
    <% if(post.image){ %> <img src="<%=post.image%>" alt="<%= post.title %>"> <%}%>
    <p><%=post.content%></p>
    <a href="/index/<%=post._id%>">Read more</a>
<%});%>



<%include ../partials/footer %>